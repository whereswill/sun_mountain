<% provide(:title, 'Home') %>
<% if logged_in? %>

  <div class="row page-header">
    <h1>Home</h1>
  </div>

  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= "Welcome to #{ENV["COMPANY_NAME"]}" %></h1>

    <h2>
      This is the home page message for 
      <a href="<%= ENV["COMPANY_URL"] %>"><%= ENV["COMPANY_NAME"] %></a>.
    </h2>

    <%= link_to "Log in now!", login_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("http://acmelogos.com/images/logo-6.svg", alt: "Company Logo"),
              ENV["COMPANY_URL"] %>
<% end %>
