<%= f.fields_for :addresses do |a| %>

  <div class="col-md-6">
    <h3>Point of Delivery:</h3>
    <%= a.hidden_field :address_type, value: 1 %>

    <div class="field">
      <%= a.label :address1 %>
      <%= a.text_field :address1, class: 'form-control'  %>
    </div>

    <div class="field">
      <%= a.label :address2 %>
      <%= a.text_field :address2, class: 'form-control'  %>
    </div>

    <div class="field">
      <%= a.label :city %>
      <%= a.text_field :city, class: 'form-control'  %>
    </div>

    <div class="field">
      <%= a.label :state %>
      <%= a.text_field :state, class: 'form-control'  %>
    </div>

    <div class="field">
      <%= a.label :zip_code %>
      <%= a.text_field :zip_code, class: 'form-control'  %>
    </div>
  </div>
<% end %>